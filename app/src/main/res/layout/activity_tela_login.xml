<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.buscadordehoteis.view.TelaLogin">

    <TextView
        android:id="@+id/tv_cpf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informe seu CPF:"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/ed_cpf"

         />

    <EditText
        android:id="@+id/ed_cpf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:autofillHints="CPF - APENAS NÚMEROS"
        android:hint="Nome de Usuário"
        app:layout_constraintTop_toBottomOf="@id/tv_cpf"
        app:layout_constraintBottom_toTopOf="@+id/tv_senha"
        />

    <TextView
        android:id="@+id/tv_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informe sua senha:"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/ed_cpf"
        app:layout_constraintBottom_toTopOf="@id/ed_senha"/>

    <EditText
        android:id="@+id/ed_senha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:autofillHints="Senha de Usuário"
        android:hint="Senha de Usuário"
        app:layout_constraintTop_toBottomOf="@id/tv_senha"
        app:layout_constraintBottom_toTopOf="@id/bt_entrar"
        />

    <Button
        android:id="@+id/bt_entrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/bt_depois"
        app:layout_constraintBottom_toTopOf="@id/bt_novo_usuario"
        app:layout_constraintTop_toBottomOf="@id/ed_senha"
        android:text="ENTRAR"/>

    <Button
        android:id="@+id/bt_depois"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="depois"
        app:layout_constraintBottom_toTopOf="@+id/bt_novo_usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/bt_entrar"
        app:layout_constraintTop_toBottomOf="@+id/ed_senha" />

    <Button
        android:id="@+id/bt_novo_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="novo usuário"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_entrar" />

</androidx.constraintlayout.widget.ConstraintLayout>